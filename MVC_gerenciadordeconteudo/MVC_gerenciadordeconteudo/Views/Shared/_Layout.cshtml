<!DOCTYPE html>
<html>
<head>
  
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
     <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="~/Styles/main.css" />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>

    @Styles.Render("~/Content/css")
    
    @Scripts.Render("~/bundles/modernizr")     

</head>
<body>    

    <div class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">          

            <div class="navbar-header ">
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarsite">
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                </button>
               
                @Html.ActionLink("PIB Cataguases", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse" id="navbarsite">
                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("Principal", "Index", "Home")</li>                    
                    <li class="nav-item">@Html.ActionLink("Sobre", "About", "Home")</li>
                    <li class="nav-item">@Html.ActionLink("Contato", "Contact", "Home")</li>
                </ul> 
            
                <form class="form-inline" action="/Home/logar" method="post">
                    <input class="form-control mr-sm-2" id="email" name="email" type="text" placeholder="Email" aria-label="Email">
                    <input class="form-control mr-sm-2" id="senha" name="senha" type="password" placeholder="Senha" aria-label="Senha">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">loguin</button>
                </form> 

              
                @*@Html.Partial("_LoginPartial")*@
            </div>

       
        </div>

        

    </div> 
    
    @*<nav class="navbar navbar-light bg-light ">
        
    </nav>*@   

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("css", false)
</body>
</html>


